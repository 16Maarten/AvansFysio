
@model IEnumerable<PatientsViewModel>
@{
    ViewData["Title"] = "HomePage";
}

<a asp-action="FormPatient" class="btn btn-primary">Patient toevoegen</a>
<div>
    <div>
        <table class="table table-striped">
            <thead>
            <th scope="col">Naam</th>
            <th scope="col">Leeftijd</th>
            <th scope="col">Email</th>
            <th scope="col">Telefoonnummer</th>
            </thead>
            <tbody>
                @foreach (PatientsViewModel patient in Model)
                {
                    <tr>
                        <td>@patient.Name</td>
                        <td>@patient.Email</td>
                        <td>@patient.Gender</td>
                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>
