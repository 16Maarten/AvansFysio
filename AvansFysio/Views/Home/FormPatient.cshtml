@model AvansFysio.Models.AddPatientViewModel

<div>
    <div asp-validation-summary="All"></div>
    <div>
        <form asp-action="FormPatient" method="post">

            <div class="form-group">
                <label asp-for="Name">Naam:</label>
                <input class="form-control" asp-for="Name" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input class="form-control" asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Telefoonnummer:</label>
                <input class="form-control" asp-for="PhoneNumber" />
            </div>
            <div class="form-group">
                <label asp-for="IdentificationNumber">Studentnummer/Personeelsnummer:</label>
                <input class="form-control" asp-for="IdentificationNumber" />
            </div>
            <div class="form-group">
                <label asp-for="Birthday">geboortedatum:</label>
                <input class="form-control" asp-for="Birthday" />
            </div>
            <div class="form-group">
                <label >Afbeelding patient:</label>
                <input type="file" name="Image" id="Imageinput">
            </div>
            <div class="form-group">
                <label asp-for="Gender">Voer je gender in:</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Men">Man</option>
                    <option value="Woman">Vrouw</option>
                    <option value="X">X</option>
                </select>
            </div>


            <div class="form-group row">
                <button class="btn btn-primary col-sm-4 text-center">Patient toevoegen</button>
            </div>
        </form>
    </div>
</div>


