@model Domain.Remark
@{
    ViewData["Title"] = "Opmerking";
}

<h1 class="avans font-weight-bold"> Opmerking</h1>
<div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Opmerking op: @Model.RemarkDate</li>
        <li class="list-group-item">Beschrijving: @Model.Description</li>
        @if (@Model.Student != null)
        {
            <li class="list-group-item"> Behandelaar: @Model.Student.Name</li>
        }
        else
        {
            <li class="list-group-item"> Behandelaar: @Model.Physiotherapist.Name</li>
        }
    </ul>
</div>
<div>
    <a class="btn btn-danger avans-background float-right" href="javascript:void(0);" onclick="history.go(-1);">Terug</a>
</div>