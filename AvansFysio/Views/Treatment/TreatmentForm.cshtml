@model AddTreatmentViewModel

@{
    ViewData["Title"] = "Behandeling toevoegen";
}


<div class="row">
    <div class="col-md-12">
        <h1 class="avans text-center font-weight-bold">Behandeling</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Type">VektisLijst</label>
                <select class="form-control" asp-for="Type" asp-items="@ViewBag.Treatments"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room"></label>
                <select asp-for="Room" class="form-control">
                    <option value="Oefenzaal">oefenzaal</option>
                    <option value="Behandelruimte">behandelruimte</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Specifics">Bijzonderheden</label>
                <input asp-for="Specifics" class="form-control" />
                <span asp-validation-for="Specifics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonEmail">Behandelaar</label>
                <select class="form-control" asp-for="PersonEmail" asp-items="@ViewBag.Persons"></select>
                <span asp-validation-for="PersonEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentDate">Datum behandeling</label>
                <input asp-for="TreatmentDate" class="form-control" />
                <span asp-validation-for="TreatmentDate" class="text-danger"></span>
            </div>
            <button type="submit" asp-route-id="@Model.PatientFileId" class="btn btn-danger btn-block avans-background">Toevoegen</button>
        </form>
        <br />
        <div>
            <a class="btn btn-danger avans-background float-right" href="javascript:void(0);" onclick="history.go(-1);">Terug</a>
        </div>
    </div>
</div>
